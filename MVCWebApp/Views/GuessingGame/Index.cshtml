
@{
    ViewData["Title"] = "Doctor";

}

<html>
<head>
    <style type="text/css">

        .message {
            background-color: wheat;
            color: orangered;
        }
    </style>
</head>

<body>
    @if (ViewBag.Message != null)
    {
        <p><h3 class="message">@ViewBag.Message</h3></p>
    }

    <form asp-controller="GuessingGame" asp-action="Index" method="post">
        <label>Your guess please:</label>
        <input type="number" name="guess" min="1" val />
        <input type="submit" value="Guess!" />
    </form>
</body>
</html>

